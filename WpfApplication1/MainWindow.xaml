<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d">

    <Window.Resources>
        <local:CanvasDragDropAdvisor x:Key="advisor" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Height="30" Grid.Column="0" Text="PRUEBA" Background="YellowGreen"  local:DragDropManager.UseDragSourceAdvisor="{StaticResource advisor}"/>
        <Canvas Grid.Column="1" Background="White"
                local:DragDropManager.UseDragSourceAdvisor="{StaticResource advisor}" 
                local:DragDropManager.UseDropTargetAdvisor="{StaticResource advisor}">
        </Canvas>
    </Grid>
</Window>
