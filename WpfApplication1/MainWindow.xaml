<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d">

    <Window.Resources>
        <local:CanvasDropAdvisor x:Key="Advisor" />
        <local:ItemDragAdvisor x:Key="ItemAdvisor" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Height="30" Text="PRUEBA1" Background="YellowGreen" local:DragDropManager.UseDragSourceAdvisor="{StaticResource ItemAdvisor}" />
            <TextBlock Height="30" Text="PRUEBA2" Background="YellowGreen" />
        </StackPanel>
        <Canvas Grid.Column="1" Background="White" local:DragDropManager.UseDropTargetAdvisor="{StaticResource Advisor}" local:DragDropManager.UseDragSourceAdvisor="{StaticResource Advisor}">
        </Canvas>
    </Grid>
</Window>
